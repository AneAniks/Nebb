@model Nebb.Data.Models.Ticket

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Ticket</h1>

<h3>Are you sure you want to delete this ticket?</h3>
<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Free carry-on bag #</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FreeCarry)
        </dd>
        <dt class="col-sm-2">Checked-in bag #</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CheckedIn)
        </dd>
        <dt class="col-sm-2">Trolley Bag#</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrolleyBag)
        </dd>
        <dt class = "col-sm-2">Destination</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flight.Destination)
        </dd class>
        <dt class = "col-sm-2">Profile</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Passenger.FirstName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
