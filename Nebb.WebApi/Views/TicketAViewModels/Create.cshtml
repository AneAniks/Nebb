@model Nebb.Data.ViewModels.TicketAViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<div>
    <div>
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for=@Model.PassengerInfo.FirstName class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for=@Model.PassengerInfo.LastName class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth" class="control-label"></label>
        <input asp-for=@Model.PassengerInfo.DateOfBirth class="form-control" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Passport" class="control-label"></label>
        <input asp-for=@Model.PassengerInfo.Passport class="form-control" />
        <span asp-validation-for="Passport" class="text-danger"></span>
    </div>
    <div>
        <div class="form-group">
            <label asp-for="Origin" class="control-label"></label>
            <input asp-for=@Model.FlightInfo.Origin class="form-control" />
            <span asp-validation-for="Origin" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Destination" class="control-label"></label>
            <input asp-for=@Model.FlightInfo.Destination class="form-control" />
            <span asp-validation-for="Destination" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Departure" class="control-label"></label>
            <input asp-for=@Model.FlightInfo.Departure class="form-control" />
            <span asp-validation-for="Departure" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ReturnDay" class="control-label"></label>
            <input asp-for=@Model.FlightInfo.ReturnDay class="form-control" />
            <span asp-validation-for="ReturnDay" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for=@Model.Ticket.FreeCarry /> @Html.DisplayNameFor(model => model.FreeCarry)
        </label>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for=@Model.Ticket.CheckedIn /> @Html.DisplayNameFor(model => model.CheckedIn)
        </label>
    </div>
    <div class="form-group">
        <label asp-for="TrolleyBag" class="control-label"></label>
        <input asp-for=@Model.Ticket.TrolleyBag class="form-control" />
        <span asp-validation-for="TrolleyBag" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
